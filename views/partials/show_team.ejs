<div ng-bind="team_name"></div>
Participate:
<div ng-repeat="league in par_leagues">
	<span ng-bind="league.league_name"></span>
</div>
Players:
<table class="ui celled table ">
                <thead>
                    <tr>
                        <th>Player Postion</th>
                        <th>Player Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="player in players">
                        <td> <span ng-bind="player.position"></span> /td>
                        <td><span ng-bind="player.player_name"></span></td>
                    </tr>
                </tbody>
            </table>
<div class="ui teal segment">
    <form action="" class="ui form">
        <div class="field">
        	<span>Add to League</span>
        	<select ng-model="add_league">
                <option value="">Select league</option>
        		<option ng-value="league.league_id" ng-repeat="league in leagues" ng-bind="league.league_name"></option>
        	</select>
        </div>
        <button class="ui button" ng-click="add_to_league()">Go</button>
    </form>
</div>
<button class="ui button" ng-click="reveal_add_player()">Add player</button>
<div class="ui teal segment" ng-hide="player_add">
    <form action="" class="ui form">
        <div class="field">
            <span>Add Player</span>
            <div class="field">
                Name<input type="text" ng-model="player_name">
            </div>
            <div class="field">
                Position
                <select ng-model="position" ng-options="o as o for o in enumOptions"></select>
            </div>
            <div class="field">
                Age<input type="text" ng-model="age">
            </div>
            <div class="field">
                Height<input type="text" ng-model="height">
            </div>
            <div class="field">
                Weight<input type="text" ng-model="weight">
            </div>
            <div class="field">
                Batting
                <select ng-model="batting" ng-options="o as o for o in enumOptions2"></select>
            </div>                                    
        </div>
        <button class="ui button" ng-click="add_player()">Go</button>
    </form>
</div>
